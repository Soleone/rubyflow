<blockquote class="comment">
  <span class="a">&#147;</span><span class="b">&#148;</span>
  
  <% form_for [item, comment] do |f| %>
    
    <h3>Post a Comment</h3>

    <% if comment.errors.size > 0 %>
      <p class="message">Error! Your comment is too long or too short.</p>
    <% end %>

    
    <% if logged_in? %>
      <p>Posting as <strong><%= current_user.login %></strong></p>
    <% else %>
      <p><em>Note: If you are a registered user, <%= link_to 'log in', login_url %> to populate these fields.</em></p>
      <p><%= f.text_field :byline %>
      <label for="author"><small>Name / Byline (required)</small></label></p>
    <% end %>

    <table class="formatting-help">
    <tr><th colspan="3"><strong>If you wish, you may use <%= link_to "Textile", "http://hobix.com/textile/quick.html" %> to format your post:</strong></th></tr>
    <tr><td class="code">_emphasis_</td><td> &rarr; </td><td><em>emphasis</em></td></tr>
    <tr><td class="code">*strong*</td><td> &rarr; </td><td><em>strong</em></td></tr>
    <tr><td class="code">"Ruby on Rails":http://www.rubyonrails.org</td><td> &rarr; </td><td><a href="http://www.rubyonrails.org">Ruby on Rails</a></td></tr>
    <tr><td class="code">* an item<br/>* and another</td><td valign="middle"> &rarr; </td><td><ul><li>an item</li><li>and another</li></ul></td></tr>
    <tr><td class="code"># one<br /># two</td><td valign="middle">&rarr;</td><td><ol><li>one</li><li>two</li></ol></td></tr>
    </table>
    <p><%= f.text_area :content %></p>

    <%= render :partial => 'home/signup_captcha' unless logged_in? %>

    <p><%= f.submit "Post Comment" %></p>
  <% end %>
  
</blockquote>
